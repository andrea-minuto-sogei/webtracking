{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Web Tracking Apache Module Build",
      "command": "gcc",
      "args": [
        "-std=c++23",
        "-std=c17",
        "-D_LARGEFILE64_SOURCE=1",
        "-L/prod/IBM/HTTPServer/lib",
        "-shared",
        "-static-libstdc++",
        "-o",
        "${fileDirname}/mod_web_tracking.so",
        "-I/prod/IBM/HTTPServer/include",
        "-I${fileDirname}/zlib",
        "-O3",
        "-Wall",
        "-fmessage-length=0",
        "-fPIC",
        "${fileDirname}/*.cpp",
        "${fileDirname}/*.c",
        "${fileDirname}/zlib/*.c",
        "/opt/rh/gcc-toolset-14/root/usr/lib/gcc/x86_64-redhat-linux/14/libstdc++.a"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
